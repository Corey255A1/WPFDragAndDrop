<UserControl x:Class="DragAndDropBareMinimum.DropZone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DragAndDropBareMinimum"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  AllowDrop="True" Drop="UserControl_Drop" Background="#FF2E2EAC" DragEnter="UserControl_DragEnter" DragLeave="UserControl_DragLeave">
    <Grid>
        <Rectangle Name="borderRect" Stroke="Black" StrokeThickness="5" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" StrokeDashArray=""></Rectangle>
        <Label Content="DROP ZONE" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Calibri" FontSize="24" FontWeight="Bold"/>

    </Grid>
</UserControl>
